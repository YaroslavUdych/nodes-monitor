{
	"name": "nodes-monitor",
	"version": "1.0.0",
	"description": "A monorepo for monitoring nodes",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "concurrently -n shared,backend,frontend -c magenta,cyan,green \"npm run dev:shared\" \"npm run dev:backend\" \"npm run dev:frontend\"",
		"dev:backend": "npm -w backend run dev",
		"dev:frontend": "npm -w frontend run dev",
		"dev:shared": "npm -w @app/shared run build -- --watch",
		"build": "npm -w @app/shared run build && npm -w backend run build && npm -w frontend run build",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"lint:backend": "eslint packages/backend",
		"lint:frontend": "eslint packages/frontend",
		"docker:up": "docker-compose up",
		"docker:up:build": "docker-compose up --build",
		"docker:down": "docker-compose down",
		"docker:logs": "docker-compose logs -f"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"concurrently": "^9.2.1",
		"eslint": "^9.39.2",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"globals": "^17.3.0",
		"typescript-eslint": "^8.54.0"
	}
}
